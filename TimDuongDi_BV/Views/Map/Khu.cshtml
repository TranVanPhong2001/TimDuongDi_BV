@model TimDuongDi_BV.Models.DuongDi

@{
    ViewBag.Title = "MapKhu";
    var selectedDiemDi = ViewBag.DiemDi as string ?? "Vị trí hiện tại";
    var selectedDiemDen = ViewBag.DiemDen as string ?? "Vị trí muốn đến";
}


<div class="space"></div>

<div class="title">
    <h2>Tìm nơi bạn muốn đến</h2>
</div>

<form class="box_location" action="/Home/Tang1" method="post">

    <div class="dropdown">
        <div class="select">
            <select class="form-control" name="diemDi" id="diemDi">
                <option value="Vị trí hiện tại">Vị trí hiện tại</option>
                <option value="Khoa khám bệnh" @(selectedDiemDi == "Khoa khám bệnh" ? "selected" : "")>Khoa khám bệnh</option>
                <option value="Khu lấy mẫu xét nghiệm" @(selectedDiemDi == "Khu lấy mẫu xét nghiệm" ? "selected" : "")>Khu lấy mẫu xét nghiệm</option>
                <option value="Khu khám dịch vụ" @(selectedDiemDi == "Khu khám dịch vụ" ? "selected" : "")>Khu khám dịch vụ</option>
                <option value="Quầy hướng dẫn" @(selectedDiemDi == "Quầy hướng dẫn" ? "selected" : "")>Quầy hướng dẫn</option>
                <option value="Khoa chăm sóc giảm nhẹ" @(selectedDiemDi == "Khoa chăm sóc giảm nhẹ" ? "selected" : "")>Khoa chăm sóc giảm nhẹ</option>
                <option value="Khu siêu âm" @(selectedDiemDi == "Khu siêu âm" ? "selected" : "")>Khu siêu âm</option>
                <option value="Khoa chẩn đoán hình ảnh" @(selectedDiemDi == "Khoa chẩn đoán hình ảnh" ? "selected" : "")>Khoa chẩn đoán hình ảnh</option>
                <option value="Khoa cấp cứu" @(selectedDiemDi == "Khoa cấp cứu" ? "selected" : "")>Khoa cấp cứu</option>
                <option value="Quầy tiếp nhận" @(selectedDiemDi == "Quầy tiếp nhận" ? "selected" : "")>Quầy tiếp nhận</option>
                <option value="Quầy thu ngân" @(selectedDiemDi == "Quầy thu ngân" ? "selected" : "")>Quầy thu ngân</option>
                <option value="Quầy thông tin" @(selectedDiemDi == "Quầy thông tin" ? "selected" : "")>Quầy thông tin</option>
            </select>
        </div>
    </div>

    <div class="icon">
        <i class='bx bx-chevrons-right bx-fade-right'></i>
    </div>

    <div class="dropdown">
        <div class="select">
            <select class="form-control" name="diemDen" id="diemDen">
                <option value="Vị trí muốn đến">Vị trí muốn đến</option>
                <option value="Khoa khám bệnh" @(selectedDiemDen == "Khoa khám bệnh" ? "selected" : "")>Khoa khám bệnh</option>
                <option value="Khu lấy mẫu xét nghiệm" @(selectedDiemDen == "Khu lấy mẫu xét nghiệm" ? "selected" : "")>Khu lấy mẫu xét nghiệm</option>
                <option value="Khu khám dịch vụ" @(selectedDiemDen == "Khu khám dịch vụ" ? "selected" : "")>Khu khám dịch vụ</option>
                <option value="Quầy hướng dẫn" @(selectedDiemDen == "Quầy hướng dẫn" ? "selected" : "")>Quầy hướng dẫn</option>
                <option value="Khoa chăm sóc giảm nhẹ" @(selectedDiemDen == "Khoa chăm sóc giảm nhẹ" ? "selected" : "")>Khoa chăm sóc giảm nhẹ</option>
                <option value="Khu siêu âm" @(selectedDiemDen == "Khu siêu âm" ? "selected" : "")>Khu siêu âm</option>
                <option value="Khoa chẩn đoán hình ảnh" @(selectedDiemDen == "Khoa chẩn đoán hình ảnh" ? "selected" : "")>Khoa chẩn đoán hình ảnh</option>
                <option value="Khoa cấp cứu" @(selectedDiemDen == "Khoa cấp cứu" ? "selected" : "")>Khoa cấp cứu</option>
                <option value="Quầy tiếp nhận" @(selectedDiemDen == "Quầy tiếp nhận" ? "selected" : "")>Quầy tiếp nhận</option>
                <option value="Quầy thu ngân" @(selectedDiemDen == "Quầy thu ngân" ? "selected" : "")>Quầy thu ngân</option>
                <option value="Quầy thông tin" @(selectedDiemDen == "Quầy thông tin" ? "selected" : "")>Quầy thông tin</option>
            </select>
        </div>
    </div>

    <button type="submit">Tìm kiếm</button>

</form>
@if (ViewBag.Message != null)
{
    <div class="alert alert-info" style="text-align: center; margin-top: 20px;">
        @ViewBag.Message
    </div>
}
<div class="image-display">
    @if (ViewBag.Route != null)
    {
        <img id="floorMap" src="@ViewBag.Route" alt="Floor Map">
    }
    else
    {
        <img id="defaultImage" src="@Model.loTrinh" alt="Default Image">
    }
</div>
